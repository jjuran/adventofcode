#!/usr/bin/env lvx

const bindir = dirname realpath argv[ 0 ]

const input_path = if argc > 1 then {argv[ 1 ]} else {bindir "/input.txt"}

const data = load input_path

def count (s)
{
	var seen = x"00" * 128
	
	for c in s do
	{
		seen[ u8 c ] = '.'
	}
	
	seen[ u8 '\n' ] = '\0'
	
	return Iter.popcount seen
}

var sum = 0

var p = begin data

while true do
{
	if (const q = p.find "\n\n") then
	{
		sum += count (q - p)
		
		p = q + 2
	}
	else
	{
		sum += count p.rest
		break
	}
}

print sum
