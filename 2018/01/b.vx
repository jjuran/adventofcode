#!/usr/bin/env lvx

let bindir = dirname realpath argv[ 0 ]

let input_path = if argc > 1 then {argv[ 1 ]} else {bindir "/input.txt"}

let data = (load input_path).lines() map int

let extent = 2^20
let offset = extent div 2

var seen = x"00" * extent

seen[ 0 + offset ] = '\xFF'

var freq = 0

while true do
{
	for d in data do
	{
		freq += d
		
		let i = freq + offset
		
		if seen[ i ] then
		{
			print freq
			exit 0
		}
		
		seen[ i ] = '\xFF'
	}
}
