#!/usr/bin/env vx

const bindir = dirname realpath argv[ 0 ]

const data = (load bindir "/1.txt").lines()

def fuel_cost (mass)
{
	const cost = mass div 3 - 2
	
	if cost <= 0 then
	{
		return 0
	}
	
	return cost + fuel_cost cost
}

const result = data map { fuel_cost int v } per {a + b}

print result
