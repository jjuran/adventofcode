#!/usr/bin/env lvx

const bindir = dirname realpath argv[ 0 ]

const input_path = if argc > 1 then {argv[ 1 ]} else {bindir "/input.txt"}

const data = (load input_path).lines()[ 0 ]

var floor = 0

for c in data do
{
	if c == '(' then
	{
		++floor
	}
	else if c == ')' then
	{
		--floor
	}
}

print floor
