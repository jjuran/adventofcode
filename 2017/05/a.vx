#!/usr/bin/env minivx

let bindir = dirname realpath argv[ 0 ]

let input_path = if argc > 1 then {argv[ 1 ]} else {bindir "/input.txt"}

var data = (load input_path).lines() map int

var total = 0

var ip = 0

let range = 0 -> data.length

while ip in range do
{
	++total
	
	ip += data[ ip ]++
}

print total
