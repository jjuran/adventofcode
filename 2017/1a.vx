#!/usr/bin/env vx

const bindir = dirname realpath argv[ 0 ]

const data = (load bindir "/1.txt").lines()[ 0 ]

var sum = 0

for i in 1 -> data.length do
{
	if data[ i - 1 ] == data[ i ] then
	{
		sum += u8 data[ i ] - u8 '0'
	}
}

if data[ 0 ] == data[ data.length - 1 ] then
{
	sum += u8 data[ 0 ] - u8 '0'
}

print sum
